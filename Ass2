using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;


namespace smallest
{
    class index
    
    {
static int smallestindex(int[]arrayelements,int size){
    int minimum = arrayelements[0];
    int minimumIndex = 0;
 for (int j=0; j<size; j++)
    {
    if (arrayelements [j]<minimum)
    {
       minimum = arrayelements [j];
        minimumIndex = j;
         }
     }
     return minimumIndex;
     }
        static void Main(string[] args)
        {
            int[]coreArray={1,2,3,4,5};
            int answer = smallestindex (coreArray,coreArray.Length);
            Console.WriteLine(answer);
        }
    }
}
